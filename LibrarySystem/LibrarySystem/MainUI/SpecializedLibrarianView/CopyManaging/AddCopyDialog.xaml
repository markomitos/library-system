<Window x:Class="LibrarySystem.MainUI.SpecializedLibrarianView.CopyManaging.AddCopyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibrarySystem.MainUI.SpecializedLibrarianView"
        mc:Ignorable="d"
        Title="AddCopyDialog" Height="194" Width="270">
    <Grid>
        <Label Content="Price" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="priceTextBox" HorizontalAlignment="Right" Margin="0,34,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Number of copies" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="numberOfCopiesTextBox" HorizontalAlignment="Right" Margin="0,68,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="addBookButton" Command="{Binding AddCopyCommand}"  Content="Add book" HorizontalAlignment="Center" Margin="0,134,0,0" VerticalAlignment="Top" Width="140" Height="34" Background="#FF4FB53A" Foreground="White" Cursor="Hand"/>

    </Grid>
</Window>
