<Window x:Class="LibrarySystem.BookBorrowings.BookReturn.ReturnBookDialogs.ReturnBookDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Return Book Dialog" Height="450" Width="360">
    <Grid>
        <Label Content="Copy:" HorizontalAlignment="Left" Height="30" Margin="39,36,0,0" VerticalAlignment="Top" Width="100"/>
        <Label Content="{Binding Copy.Id}" HorizontalAlignment="Left" Height="30" Margin="151,36,0,0" VerticalAlignment="Top" Width="163"/>
        <Label Content="Title:" HorizontalAlignment="Left" Height="35" Margin="39,90,0,0" VerticalAlignment="Top" Width="100"/>
        <Label Content="{Binding Title}" HorizontalAlignment="Left" Height="35" Margin="151,90,0,0" VerticalAlignment="Top" Width="163"/>

    </Grid>
</Window>
